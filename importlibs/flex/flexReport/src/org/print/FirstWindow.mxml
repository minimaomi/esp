<?xml version="1.0" encoding="utf-8"?>

<mx:TitleWindow 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" width="400" height="300"
	close="close()" showCloseButton="true">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			[Bindable]
			public var myPopUpvar:Array = new Array();
		
		
			private function close():void
			{
				PopUpManager.removePopUp(this);    
			}
			private function sendMessage():void
			{
				var outgoingEvent:Event = new Event("pop", false);
			//	logs = labelPosition.selectedItem.toString();
				dispatchEvent(outgoingEvent);
				close();
			}
			 
			public function setDirection(ishorizontal:Boolean):void
			{
			   if(ishorizontal)
				   Horizontal.selected = true;
			   else
				   Vertical.selected = true;
			}
			public function setMargin(left:int ,right:int,top:int,bottom:int):void{
				leftMargin.value = left;
				rightMargin.value = right;
				topMargin.value = top;
				bottomMargin.value = bottom;
				
			}
			public function setcolumns(v:int):void{
				columns.value = v;
			}
			public function sethalignList(data:int):void{
				if(data==1)
				   halignList.selectedIndex = 0;
				else if(data==0)
					halignList.selectedIndex = 1;
				else if(data==2)
					halignList.selectedIndex = 2;
			}
			public function setshrink(data:String):void{
				 
					shrink.selectedIndex=int(data)-1;
			}
			public function setclearColor(clear:Boolean):void{
				if(clear){
					clearColor.selected=true;
				}
				else{
					clearColor.selected=false;
				}
				
				 
			}
			public function setclearLayer(clear:Boolean):void{
				if(clear){
					clearLayer.selected=true;
				}
				else{
					clearLayer.selected=false;
				}
			}
			
			public function setLanguae(lang:String){
				if(lang=="en"){
					printDirect.label="Print Direction";
					Vertical.label="Portrait";
					Horizontal.label="Landscape";
					locationForm.label="Page margins(L R)";
					locationFormNext.label="(T B)";
					
					horizenForm.label="Horizon Alignment";
					var Obj:Array = [{label:"Center", data:1},
						{label:"Left", data:0},
						{label:"Right", data:2}];
					halignList.dataProvider = Obj;
					
					comForm.label="Columns";
					shrinkForm.label="Zoom";
					Obj = [{label:"None", data:1},
						{label:"Wide", data:2},
						{label:"High", data:3}];
					shrink.dataProvider=Obj;
					
					clearColor.label="Clear Color";
					clearLayer.label="Clear Image";
					setupBut.label="OK  ";
					closeBut.label="Close ";
				}
			}
			
		]]>
	</mx:Script>
	
	<mx:Form cornerRadius="5" indicatorGap="5" paddingBottom="5"    label="页面设置" 
			 paddingLeft="5" paddingRight="5" paddingTop="5" id="basicPropertyPane" width="100%" >
		<!--<mx:Label text="页面设置" fontStyle="italic" width="100%" fontWeight="bold"/>-->
		<mx:FormItem label="打印方向:" id="printDirect" fontSize="13">
			<!--<mx:TextInput width="90%" id="labelName"/>-->
			
			<mx:HBox horizontalGap="3"   >
			   <mx:RadioButton  id="Vertical" label="纵向" groupName="radiogroup1" fontSize="12" selected="true">
			   </mx:RadioButton>
			   <mx:RadioButton  id="Horizontal" label="横向" groupName="radiogroup1" fontSize="12" >
			   </mx:RadioButton>
			</mx:HBox>
			
		</mx:FormItem>
		<!--
		<mx:FormItem label="Color:">
			<mx:ColorPicker id="labelColor"/>
		</mx:FormItem>
		-->
		<mx:FormItem id="locationForm" label="页边距毫米(左,右):" fontSize="13">
			<mx:HBox horizontalGap="3"   >
			<mx:NumericStepper minimum="1" maximum="1000" id="leftMargin"  />
			<mx:NumericStepper minimum="1" maximum="1000" id="rightMargin"/>
			</mx:HBox>
		</mx:FormItem>
		 
		
		<mx:FormItem id="locationFormNext" label="(上,下):"   fontSize="13">
			<mx:HBox horizontalGap="3"   >
			<mx:NumericStepper minimum="1" maximum="1000" id="topMargin" />
			<mx:NumericStepper minimum="1" maximum="1000" id="bottomMargin"/>
			</mx:HBox>
		</mx:FormItem>
		<mx:HRule width="100%"/>
		
		<mx:FormItem   id="horizenForm"  label="水平对齐:"  >
			    <mx:ComboBox id="halignList"  >
					<mx:Array>
						<mx:Object data="1" label="居中"/>
						<mx:Object data="0" label="靠左"/>
						<mx:Object data="2" label="靠右"/>
					</mx:Array>		
				</mx:ComboBox>
			
		</mx:FormItem>
		
		<mx:FormItem label="分栏:" id="comForm" fontSize="13">
				<mx:NumericStepper minimum="1" maximum="100" id="columns" value="1" />
		</mx:FormItem>
		
		<mx:FormItem id="shrinkForm" label="打印缩放:"  >
			    <mx:ComboBox id="shrink" >
					<mx:Array>
						<mx:Object data="1" label="无"/>
						<mx:Object data="2" label="按宽"/>
						<mx:Object data="3" label="按高"/>
					</mx:Array>	
				</mx:ComboBox>
		</mx:FormItem>
		<mx:FormItem label="">
			<mx:CheckBox label="黑白打印"  id="clearColor"/>
		</mx:FormItem>
		<mx:FormItem label="">
			<mx:CheckBox label="清除图层"  id="clearLayer"/>
		</mx:FormItem>
		
		<mx:FormItem  >
			<mx:HBox fontWeight="bold" horizontalGap="3">
			<mx:Button x="100" bottom="10" id="setupBut" label=" 设置  " click="sendMessage()" fontWeight="bold"
					   labelPlacement="right" textAlign="center"/>
			
			<mx:Button id="closeBut" label=" 关闭  " click="close()" />
			</mx:HBox>
		</mx:FormItem>
		
	</mx:Form>
	<mx:FormItem  >
		<mx:HRule width="100%" />
	</mx:FormItem>
</mx:TitleWindow>
